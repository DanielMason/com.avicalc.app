<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/c172r_checklist_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Checklists">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/c172r_checklist_title"
        android:id="@+id/c172r_checklist_title1"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/c172r_checklist_subtitle"
        android:id="@+id/c172r_checklist_subtitle1"
        android:layout_below="@+id/c172r_checklist_title1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>


    <LinearLayout
        android:layout_height="70dp" android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/c172r_checklist_subtitle1"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="170dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:text="Pre-Flight"
            android:textColor="@color/text"
            android:id="@+id/b172r_eng"
            android:onClick="load172preflight"
            />

        <Button
            android:layout_width="170dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:text="Pre-Start"
            android:textColor="@color/text"
            android:id="@+id/b172r_prestart"
            android:onClick="load172prestart"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="70dp" android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="170dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:text="Engine Start"
            android:textColor="@color/text"
            android:id="@+id/b172r_eng"
            android:onClick="load172enginestart"
/>

        <Button
            android:layout_width="170dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:text="Run-Up"
            android:textColor="@color/text"
            android:id="@+id/b172r_runup"
            android:onClick="load172runup"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="70dp" android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="170dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:text="V speeds"
            android:id="@+id/b172r_vspeed"
            android:textColor="@color/text"
            android:onClick="load172vspeeds"
            />

        <Button
            android:layout_width="170dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:text="Coming Soon"
            android:textColor="@color/text"
            android:id="@+id/b172r_comingsoon"
            />
    </LinearLayout>
</RelativeLayout>