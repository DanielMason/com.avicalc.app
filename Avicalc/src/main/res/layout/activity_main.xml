<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity?">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AviCalc"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="v0.5.8"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="12dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout  android:layout_height="70dp" android:layout_width="fill_parent"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="170dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:text="Fuel Calc"
            android:textColor="@color/text"
            android:id="@+id/loadFuelCalc"
            android:onClick="loadFuelCalc"
            />

        <Button
            android:layout_width="170dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:text="Checklists &amp; Briefings"
            android:textColor="@color/text"
            android:id="@+id/loadChecklists"
            android:onClick="loadChecklists"
        />

    </LinearLayout>

    <LinearLayout android:layout_marginTop="10dp"
        android:id="@+id/linearLayout2"
        android:layout_height="70dp" android:layout_width="fill_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:text="Weight &amp; Balance Calc"
            android:textColor="@color/text"
            android:id="@+id/loadWeightandBalance"
            android:onClick="loadWeightandBalance"
         />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:text="Metar &amp; TAF"
            android:textColor="@color/text"
            android:id="@+id/loadMetar"
            android:onClick="loadMetar"
        />

    </LinearLayout>


    <LinearLayout android:layout_marginTop="10dp" android:layout_height="70dp" android:layout_width="fill_parent"
        android:layout_below="@+id/linearLayout2"
        android:id="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:text="Navigation Calc"
            android:textColor="@color/text"
            android:id="@+id/loadNavcalc"
            android:onClick="loadNavcalc"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:text="Flight Planning"
            android:textColor="@color/text"
            android:id="@+id/loadFlightplanning"
            android:onClick="loadFlightplanning"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="StudyAviation\u00A9"
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

