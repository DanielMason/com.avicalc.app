<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fuel Conversion"
        android:id="@+id/textFuelConversion"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Convert"
        android:id="@+id/textView2"
        android:layout_below="@+id/textFuelConversion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerFrom"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:entries="@array/conversion_array" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/textInput1"
        android:layout_alignBottom="@+id/spinnerFrom"
        android:layout_toRightOf="@+id/spinnerFrom"
        android:hint="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="to"
        android:id="@+id/textView3"
        android:layout_below="@+id/textInput1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerTo"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:entries="@array/conversion_array"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textOutput1"
        android:layout_alignBottom="@+id/spinnerTo"
        android:layout_toRightOf="@+id/spinnerTo"
        android:layout_alignRight="@+id/textInput1"
        android:layout_alignTop="@+id/spinnerTo"
        android:editable="false"
        android:enabled="true"
        android:text="1"
        android:maxLines="1"
        android:textSize="20dp"
        android:textStyle="normal"
        android:paddingLeft="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:id="@+id/buttonConvert"
        android:layout_below="@+id/spinnerTo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="convertNow" />

</RelativeLayout>
